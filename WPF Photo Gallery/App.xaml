<Application x:Class="WPF_Photo_Gallery.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_Photo_Gallery"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style Dictionaries/MainWindowStyleDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style Dictionaries/RegistrationStyleDictionary.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style Dictionaries/LoginStyleDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
